<div class="container">
  <h1>Make a card for deck <%= @deck.name %> </h1>

  <form method="post" action="/usr/decks/<%= @deck.id %>/cards">
    Question<br>
    <input type="text" name="question" size="60"}><br>
    <br>
    Answer<br>
    <input type="text" name="answer">

    <input type="submit" value="create">
  </form>
  <br>

  <% unless @cards.empty? %>
    <h2>Cards:</h2>
    <% @cards.each do |card| %>
      <p style="color:blue; display:inline"><%=card.question%></p>
      <form method="post" action="/usr/decks/<%= @deck.id %>/cards/<%= card.id %>" style="display:inline">
        <input type="submit" value="delete" style="display:inline">
      </form>
      <form method="get" action="/usr/decks/<%= @deck.id %>/cards/<%=card.id%>" style="display:inline">
        <input type="submit" value="update" style="display:inline">
      </form>
      <br>
    <% end %>
  <% end %>

</div>